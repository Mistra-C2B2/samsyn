user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    client_max_body_size 100M;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript
               application/json application/javascript application/xml+rss
               application/rss+xml font/truetype font/opentype
               application/vnd.ms-fontobject image/svg+xml;

    server {
        listen 80;
        server_name _;
        root /usr/share/nginx/html;
        index index.html;

        # Cache static assets
        location /assets/ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }

        # SPA routing - serve index.html for all routes
        location / {
            try_files $uri $uri/ /index.html;
            add_header Cache-Control "no-cache";

            # Content Security Policy to allow Clerk authentication with custom domain
            add_header Content-Security-Policy "
                default-src 'self';
                script-src 'self' 'unsafe-inline' 'unsafe-eval' https://clerk.${DOMAIN} https://challenges.cloudflare.com;
                style-src 'self' 'unsafe-inline';
                font-src 'self';
                img-src 'self' data: https: blob:;
                connect-src 'self' https://clerk.${DOMAIN} https://api.${DOMAIN} https://${DOMAIN} wss://clerk.${DOMAIN};
                frame-src 'self' https://clerk.${DOMAIN} https://challenges.cloudflare.com;
                worker-src 'self' blob:;
            " always;
        }

        # Health check endpoint
        location /health {
            access_log off;
            return 200 "healthy\n";
            add_header Content-Type text/plain;
        }
    }
}
