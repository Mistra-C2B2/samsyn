{
	"name": "samsyn-workspace",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"install:frontend": "cd frontend && npm install",
		"install:backend": "cd backend && uv sync",
		"install": "npm run install:frontend && npm run install:backend",
		"dev": "cd frontend && npm run dev",
		"dev:backend": "cd backend && uv run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
		"build": "cd frontend && npm run build",
		"lint": "cd frontend && npm run lint",
		"format": "cd frontend && npm run format",
		"check": "cd frontend && npm run check",
		"test": "playwright test",
		"test:auth": "dotenv -e .env.test -- playwright test tests/e2e/layers-authenticated.spec.ts",
		"test:ui": "playwright test --ui",
		"test:headed": "playwright test --headed",
		"test:report": "playwright show-report",
		"migrate": "cd backend && uv run alembic upgrade head",
		"migrate:new": "cd backend && uv run alembic revision --autogenerate -m"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"dotenv": "^17.2.3"
	}
}
